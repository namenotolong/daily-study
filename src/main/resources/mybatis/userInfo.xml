<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huyong.spring.mybatis.mapper.UserInfoMapper">

    <resultMap type="com.huyong.spring.mybatis.domain.UserInfo" id="baseMap">
        <id column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <select id="selectById" resultMap="baseMap">
        select  * from user_info where id = #{id}
    </select>

    <select id="selectMap" resultType="java.util.HashMap">
        select * from user_info limit 10
    </select>

    <select id="selectByList" resultMap="baseMap">
        select  * from user_info where id in
        <foreach collection="list" item="item" separator="," close=")" open="(">
            #{item}
        </foreach>
    </select>

    <select id="selectByListAndName" resultMap="baseMap">
        select  * from user_info where id in
        <foreach collection="list" item="item" separator="," close=")" open="(">
            #{item}
        </foreach>
        <if test="name != '' and name != null">
            and `name` = #{name}
        </if>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into user_info (`name`) values (#{name})
    </insert>

    <update id="updateById">
        update user_info set name = #{name} where id = #{id}
    </update>

    <delete id="deleteById">
        delete from user_info where id = #{id}
    </delete>

    <cache eviction="FIFO"  flushInterval="10800000"  size="512" readOnly="true"/>
</mapper>