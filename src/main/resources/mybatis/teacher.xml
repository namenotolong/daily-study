<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huyong.spring.mybatis.mapper.TeacherMapper">

    <resultMap type="com.huyong.spring.mybatis.domain.Teacher" id="baseMap">
        <id column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <select id="selectById" resultMap="baseMap">
        select  * from teacher
        where id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="false" keyProperty="id">
        insert into teacher (`name`) values (#{name})
    </insert>

    <update id="updateById">
        update teacher set name = #{name} where id = #{id}
    </update>

    <delete id="deleteById">
        delete from teacher where id = #{id}
    </delete>

    <cache eviction="FIFO"  flushInterval="10800000"  size="512" readOnly="true" />

</mapper>